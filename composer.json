{
    "name": "princejohnsantillan/id-base-converter",
    "description": "Convert integer ID to string and vice versa",
    "license": "MIT",    
    "authors": [
        {
            "name": "Prince John Santillan",
            "email": "mail@princejohnsantillan.net"
        }
    ],
    "keywords": [
        "base converter",
        "id converter",
        "integer to string",
        "string to integer",
        "encode",
        "decode"
    ],
    "autoload": {
        "psr-4": {
            "IdBaseConverter\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "IdBaseConverter\\Test\\": "tests/"
        }
    },
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "laravel/pint": "^1.13",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^9.6"
    },
    "scripts": {
        "lint": [
            "./vendor/bin/pint"
        ],
        "analyse": [
            "./vendor/bin/phpstan analyse"
        ],
        "test": [
            "XDEBUG_MODE=coverage ./vendor/bin/phpunit --coverage-html=html"
        ],                
        "review": [
            "./vendor/bin/pint",
            "./vendor/bin/phpstan analyse",
            "XDEBUG_MODE=coverage ./vendor/bin/phpunit --coverage-html=html"
        ],
        "ci-review": [
            "./vendor/bin/pint --test",
            "./vendor/bin/phpstan analyse --memory-limit=-1",
            "./vendor/bin/phpunit"
        ]
    }
}
